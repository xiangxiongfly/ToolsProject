<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xx">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".act.InputActivity" />
        <activity android:name=".act.VerifyCodeActivity" />
        <activity android:name=".act.ToastActivity" />
        <activity android:name=".act.DialogActivity" />
        <activity android:name=".act.PieViewActivity" />
        <activity android:name=".act.CircleProgressActivity" />
        <activity android:name=".act.ViewPagerActivity" />
        <activity android:name=".act.NestActivity" />
        <activity android:name=".act.nest.Nest1Activity" />
        <activity android:name=".act.nest.Nest2Activity" />
        <activity android:name=".act.ImageLoaderActivity" />
        <activity android:name=".act.TextActivity" />
        <activity android:name=".act.notification.NotificationActivity" />
        <activity android:name=".act.notification.NotifyInfoActivity" />
        <activity android:name=".act.notification.ImageActivity" />

        <service android:name=".act.notification.DownloadService" />
        <service android:name=".act.notification.MediaService" />
    </application>

</manifest>