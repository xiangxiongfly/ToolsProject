<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通通知" />

    <Button
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带下载的通知" />

    <Button
        android:id="@+id/btn_big_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BigTextStyle"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_inbox_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="InboxStyle"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_big_picture_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BigPictureStyle"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_hangup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hangup横幅通知"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_media_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="MediaStyle"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义MediaView"
        android:textAllCaps="false" />


</LinearLayout>
